<?xml version="1.0"?>
<!--
  Usage:
    roslaunch cr5_bringup cr5_bringup.launch robot_ip:=<value>
-->
<launch>

  <!-- robot_ip: IP-address of the robot's socket-messaging server -->
  <arg name="robot_id" default="CR5Robot" />
  <arg name="robot_ip" doc="IP of the controller" />
  <arg name="robot_port" doc="IP of the controller" default="9001"/>

  <node name="$(arg robot_id)" pkg="cr5_bringup" type="cr5_bringup" output="screen" >
    <param name="joint_publish_rate" type="double" value="10" />
    <param name="robot_ip_address" type="str" value="$(arg robot_ip)"/>
  </node>

</launch>
